---
import Layout from "@/layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import Figthers from "@/components/Figthers.astro";
import Info from "@/components/Info.astro";

import nocheDoradaLogotipo from "@/assets/images/noche-dorada-logotipo.webp";
---

<Layout>
  <main
    class="z-10 bg-gradient-to-r from-black/100 via-yellow-800/20 to-black/100 pt-10"
  >
    <!-- <main
    class="z-10 bg-gradient-to-b from-gray-900/90 via-gray-400/50 to-gray-900/90 pt-10"
  > -->
    <video
      autoplay
      muted
      loop
      class="absolute top-0 left-0 -z-1 h-full w-full object-cover [mask-image:linear-gradient(#000_50%,transparent_100%)]"
    >
      <source src="./video/4761701-uhd_4096_2160_25fps.mp4" type="video/mp4" />
      Tu navegador no soporta etiquetad e video.
    </video>
    <div class="">
      <Image
        src={nocheDoradaLogotipo}
        alt="Noche Dorada Logotipo"
        class="animate-once animate-duration-1500 animate-ease-in animate-fade mx-auto w-80"
      />
      <div class="mt-1 text-center">
        <div class="inline-block rounded-sm bg-gray-900 px-2">
          <span
            class="inline-block bg-gradient-to-b from-slate-100 via-yellow-500 to-slate-100 bg-clip-text text-2xl font-bold text-transparent uppercase"
            >kick.com/elzeein</span
          >
        </div>
        <h1 class="mt-4 text-xl font-semibold text-white uppercase">
          Un evento de boxeo de creadores de contenido
        </h1>
        <span
          class="text-md bg-opacity-80 mt-2 inline-block bg-white px-3 font-semibold text-black uppercase italic"
        >
          Organizado por El Zein
        </span>
      </div>
    </div>
    <Figthers />
    <Info />
  </main>
  <footer class="py-8">
    <div
